<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizTestAndroidApp.Sujal03"
             Title="Sujal03">
    <VerticalStackLayout Spacing="10">

        <Label 
 Text="Score: 0" 
 x:Name="scoreLabel" 
 FontSize="18" 
 HorizontalOptions="Center"/>

        <Image 
 Source="dotnet_bot.png"
 WidthRequest="150"
 HeightRequest="150"
 HorizontalOptions="Center" />

        <Label 
 Text="Who invented the JAVA Programming Language?:"
 VerticalOptions="Center" 
 HorizontalOptions="Center" />

        <Button x:Name="btn11"
 BackgroundColor="Green"
 Text="The Rock"
 Clicked="Wrong"/>

        <Button x:Name="btn22"
 BackgroundColor="Green"
 Text="Richard Pearson"
 Clicked="Wrong"/>

        <Button x:Name="btn33"
 BackgroundColor="Green"
 Text="James Gosling"
 Clicked="Right"/>

    </VerticalStackLayout>
</ContentPage>