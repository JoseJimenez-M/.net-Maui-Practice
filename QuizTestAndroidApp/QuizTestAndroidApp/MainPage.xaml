<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizTestAndroidApp.MainPage">

    <ScrollView>

        <VerticalStackLayout Padding="30,50" Spacing="30">

            <!-- App Logo / Hero Image -->
            <Frame HasShadow="False" Padding="0" CornerRadius="20" BackgroundColor="Transparent">
                <Image
                    Source="mainmenuimg.png"
                    HeightRequest="200"
                    Aspect="AspectFit"
                    HorizontalOptions="Center"/>
            </Frame>

            <!-- Title -->
            <Label Text="Welcome to the Quiz!"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#2E3A59"
                   HorizontalOptions="Center"
                   SemanticProperties.HeadingLevel="Level1"/>

            <!-- Subtitle -->
            <Label Text="Test your general knowledge with fun and interactive questions."
                   FontSize="18"
                   TextColor="#555"
                   HorizontalTextAlignment="Center"
                   SemanticProperties.HeadingLevel="Level2"/>

            <!-- Start Button -->
            <Button x:Name="btnGoFirst"
                    Text="🎯 I'm Ready to Start!"
                    FontSize="20"
                    TextColor="White"
                    BackgroundColor="#4CAF50"
                    CornerRadius="25"
                    HeightRequest="55"
                    Clicked="GoFirst"
                    HorizontalOptions="Center"
                    WidthRequest="250"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
