<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizTestAndroidApp.Sujal02"
             Title="Sujal02">
    <VerticalStackLayout Spacing="10">

        <Label 
    Text="Score: 0" 
    x:Name="scoreLabel" 
    FontSize="18" 
    HorizontalOptions="Center"/>

        <Image 
    Source="dotnet_bot.png"
    WidthRequest="150"
    HeightRequest="150"
    HorizontalOptions="Center" />

        <Label 
    Text="Who is the CEO of Google:"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />

        <Button x:Name="btn11"
    BackgroundColor="Green"
    Text="Andrew Tate"
    Clicked="Wrong"/>

        <Button x:Name="btn22"
    BackgroundColor="Green"
    Text="Sundar Pichai"
    Clicked="Right"/>

        <Button x:Name="btn33"
    BackgroundColor="Green"
    Text="John Cena"
    Clicked="Wrong"/>

    </VerticalStackLayout>
</ContentPage>