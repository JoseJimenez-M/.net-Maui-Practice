<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Calculator.ViewModels"
             x:Class="Calculator.MainPage">

    <ContentPage.BindingContext>
        <vm:CalculatorViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <!-- Preview -->
        <Label Text="{Binding PreviewText}"
               FontSize="24"
               HorizontalOptions="End" />

        <!-- Result -->
        <Label Text="{Binding ResultText}"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="End" />

        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
              ColumnDefinitions="Auto,Auto,Auto,Auto"
              Margin="0,20,0,0"
              ColumnSpacing="10"
              RowSpacing="10">

            <!-- Nums -->
            <Button Text="7" Grid.Row="0" Grid.Column="0"
                    Clicked="OnNumberClicked" />
            <Button Text="8" Grid.Row="0" Grid.Column="1"
                    Clicked="OnNumberClicked" />
            <Button Text="9" Grid.Row="0" Grid.Column="2"
                    Clicked="OnNumberClicked" />

            <Button Text="4" Grid.Row="1" Grid.Column="0"
                    Clicked="OnNumberClicked" />
            <Button Text="5" Grid.Row="1" Grid.Column="1"
                    Clicked="OnNumberClicked" />
            <Button Text="6" Grid.Row="1" Grid.Column="2"
                    Clicked="OnNumberClicked" />

            <Button Text="1" Grid.Row="2" Grid.Column="0"
                    Clicked="OnNumberClicked" />
            <Button Text="2" Grid.Row="2" Grid.Column="1"
                    Clicked="OnNumberClicked" />
            <Button Text="3" Grid.Row="2" Grid.Column="2"
                    Clicked="OnNumberClicked" />

            <Button Text="0" Grid.Row="3" Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Clicked="OnNumberClicked" />

            <Button Text="+" Grid.Row="0" Grid.Column="3"
                    Clicked="OnOperatorClicked" />
            <Button Text="-" Grid.Row="1" Grid.Column="3"
                    Clicked="OnOperatorClicked" />
            <Button Text="*" Grid.Row="2" Grid.Column="3"
                    Clicked="OnOperatorClicked" />
            <Button Text="/" Grid.Row="3" Grid.Column="3"
                    Clicked="OnOperatorClicked" />

            <Button Text="C" Grid.Row="3" Grid.Column="2"
                    Clicked="OnClearClicked" />
            <Button Text="=" Grid.Row="4" Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Clicked="OnEqualClicked" />
        </Grid>
    </VerticalStackLayout>

</ContentPage>
